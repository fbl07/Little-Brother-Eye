@model LittleBrotherEye.Models.APIRegisterModel

@{
    ViewBag.Title = "Register an API Key";
}

<h2 class="title">Register an API Key</h2>

@if (Model.confirmation)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <p>Your API key has been sent to <strong>@Model.Email</strong>, it should arrive in the next few minutes</p>
        </div>
    </div>
}
else
{
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("register", "developer", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                <span style="color:red;">
                    @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationSummary().ToHtmlString()))
                </span>

                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-sm-10 col-sm-offset-2">
                            <p>Your API key will sent to to via this email.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-success">Register</button>
                        </div>
                    </div>
            }
        </div>
    </div>
}
